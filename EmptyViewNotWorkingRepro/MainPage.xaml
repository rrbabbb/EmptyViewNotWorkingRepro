<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmptyViewNotWorkingRepro.MainPage">

  <ScrollView>
    <VerticalStackLayout Spacing="10">
      <VerticalStackLayout>
        <Label Text="Empty collection:"
               FontAttributes="Bold" />
        <CollectionView x:Name="EmptyCollection"
                        EmptyView="No values found...">
          <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
              <Label Text="{Binding}" />
            </DataTemplate>
          </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Null collection:"
               FontAttributes="Bold" />
        <CollectionView x:Name="NullCollection">
          <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
              <Label Text="{Binding}" />
            </DataTemplate>
          </CollectionView.ItemTemplate>

          <CollectionView.EmptyView>
            <ContentView>
              <VerticalStackLayout>
                <Label Text="No values found..." />
              </VerticalStackLayout>
            </ContentView>
          </CollectionView.EmptyView>
        </CollectionView>

        <Label Text="Values collection:"
               FontAttributes="Bold" />
        <CollectionView x:Name="ValuesCollection">
          <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
              <Label Text="{Binding}" />
            </DataTemplate>
          </CollectionView.ItemTemplate>
        </CollectionView>
      </VerticalStackLayout>
    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
